@{      ViewData["Title"] = "Delete Entry";
}
@model TrackerEntry
@*Asking user if they are sure about deleting data*@
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title</h3>
@*form with two buttons: one to delete the record and the other to cancel*@
<form asp-action="Delete" asp-controller="Home" method="post">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Collection" class="btn-primary">Cancel</a>
    @*saves form response to that entry*@
    <input type="hidden" asp-for="EntryID" a />
</form>